{
  "name": "youtrack-mcp",
  "version": "1.0.0",
  "description": "MCP server for YouTrack REST API integration",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "dev:remote": "tsx src/remote.ts",
    "start": "node dist/index.js",
    "start:remote": "node dist/remote.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=unit",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=integration",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:queries": "npx tsx scripts/test-queries.ts",
    "test:enterprise": "npx tsx scripts/test-enterprise-features.ts",
    "verify-build": "npx tsx scripts/verify-build.ts",
  "verify": "npm run verify-build",
  "watch": "tsc -w --preserveWatchOutput",
    "lint": "eslint \"src/**/*.ts\" \"scripts/**/*.ts\"",
    "lint:check": "npm run lint",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist"
  },
  "keywords": [
    "mcp",
    "youtrack",
    "api",
    "ai-agents"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/ws": "^8.18.1",
    "axios": "^1.6.0",
    "axios-retry": "^4.0.0",
    "dotenv": "^16.6.1",
    "express": "^4.18.0",
    "open": "^10.2.0",
    "winston": "^3.11.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.19.9",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.0.0",
    "typescript": "^5.8.3"
  }
}
